boolean isWrittenOnce = true;

int addrEeprom = 0;



void setup()
{
   Serial.begin(9600);
}


void loop()
{
  if (!isWrittenOnce)
  {
    addrEeprom = 0;
    writeCharacterSet();
    addrEeprom = 0;
  }

  delay(500);

  readNext();
}


void writeCharacterSet()
{
    Serial.print("Starting to write the character set to eeprom...");

    // write to internal eeprom all bytes in "sprites";
    for (int ascii = 32; ascii <= 126; ascii++)
    {
      for (int i=0; i<8; i++)
      {
        EEPROM.write(addrEeprom, sprites[ascii-32][i]);
        addrEeprom++;
      }
    }

    // finished writing to eeprom;
    isWrittenOnce = true;

    Serial.print("    Finished writing  ");
    Serial.print(addrEeprom, DEC);
    Serial.println("  bytes ");

}


void readNext()
{
  byte value = EEPROM.read(addrEeprom);
  
  Serial.print("address ");
  Serial.print(addrEeprom);
  Serial.print(": ");
  Serial.print(value, HEX);
  Serial.println();
  
  addrEeprom++;
  if (addrEeprom == 1024)  addrEeprom = 0;
}

